                        <Entry x:Name="MessageEntry" Placeholder="ÐŸÐ¾Ð²Ñ–Ð´Ð¾Ð¼Ð»ÐµÐ½Ð½Ñ..." TextColor="White" PlaceholderColor="#7A8596" Margin="10,0"/>
                    </Border>
                    <Button Grid.Column="2" Text="âž¤" BackgroundColor="#3D5AFE" CornerRadius="20" WidthRequest="45" HeightRequest="45" Clicked="OnSendMessageClicked"/>
                </Grid>

                <VerticalStackLayout x:Name="EmptyState" Grid.RowSpan="3" VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
