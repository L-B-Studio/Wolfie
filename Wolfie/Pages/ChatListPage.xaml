                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                    <BoxView VerticalOptions="End" HeightRequest="1" Color="#222C3D" Grid.ColumnSpan="3"/>
                </Grid>

                <Grid Grid.Row="1">
                    <CollectionView x:Name="MessagesCollectionView"
                                    Margin="20"
                                    RemainingItemsThreshold="5"
                                    RemainingItemsThresholdReached="OnLoadMoreMessages"
                                    VerticalScrollBarVisibility="Never"
                                    Rotation="180">

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MessageItemModel">
                                <Grid Padding="0,4" Rotation="180">
                                    <Border BackgroundColor="#1E2633"
                                                Padding="12,8"
                                                HorizontalOptions="Start"
                                                MaximumWidthRequest="400"
                                                StrokeShape="RoundRectangle 15"
                                                StrokeThickness="0">
                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border" 
                                                             Binding="{Binding SenderId}" 
                                                             Value="me">
                                                <Setter Property="HorizontalOptions" Value="End"/>
                                                <Setter Property="BackgroundColor" Value="#3D5AFE"/>
                                            </DataTrigger>
                                        </Border.Triggers>

                                        <VerticalStackLayout Spacing="4">
                                            <Label Text="{Binding MessageText}" 
                                                       TextColor="White"
                                                       FontSize="14"
                                                       LineBreakMode="WordWrap"/>
                                            <Label Text="{Binding CreatedAt}" 
                                                       TextColor="#8E9BAA"
                                                       FontSize="11"
                                                       HorizontalOptions="End"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <ActivityIndicator x:Name="MsgLoadingIndicator" 
                                       IsRunning="False" 
                                       VerticalOptions="Start" 
                                       HorizontalOptions="Center" 
                                       Margin="0,20,0,0" 
                                       Color="#3D5AFE"/>
                </Grid>

