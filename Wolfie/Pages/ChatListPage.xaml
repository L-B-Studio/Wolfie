                </VerticalStackLayout>

                <Grid Grid.Row="1">
                    <CollectionView x:Name="ChatsCollectionView" 
                                    SelectionMode="Single"
                                    SelectionChanged="OnChatSelected">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ChatItemModel">
                                <Grid Padding="15,10" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Border WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 15" BackgroundColor="#3D5AFE" StrokeThickness="0">
                                        <Label Text="{Binding ChatTitle}" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontAttributes="Bold"/>
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label Text="{Binding ChatTitle}" TextColor="White" FontSize="15" FontAttributes="Bold" MaxLines="1"/>
                                        <Label Text="{Binding LastMessage}" TextColor="#8E9BAA" FontSize="13" MaxLines="1" LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>
                                    <Label Grid.Column="2" Text="12:45" FontSize="11" TextColor="#5C6979" VerticalOptions="Start" Margin="0,5,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <ActivityIndicator x:Name="ChatsLoadingIndicator" IsRunning="False" VerticalOptions="Center" HorizontalOptions="Center" Color="#3D5AFE"/>
                </Grid>
            </Grid>

            <Grid x:Name="MainChatArea" Grid.Column="1" RowDefinitions="70,*,Auto" BackgroundColor="#0B0E14">

                <Grid x:Name="ChatHeader" Padding="20,0" ColumnDefinitions="Auto,*,Auto" IsVisible="False" BackgroundColor="#0F1622">
                    <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                        <Border WidthRequest="40" HeightRequest="40" StrokeShape="RoundRectangle 12" BackgroundColor="#3D5AFE" StrokeThickness="0">
                            <Label x:Name="HeaderAvatarLabel" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontAttributes="Bold"/>
