        <Grid x:Name="BurgerMenu" WidthRequest="280" HorizontalOptions="Start" TranslationX="-280" BackgroundColor="#151B27" Padding="20,50">
            <VerticalStackLayout Spacing="20">
                <Label Text="ÐÐ°Ð»Ð°ÑˆÑ‚ÑƒÐ²Ð°Ð½Ð½Ñ" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                <Button Text="ÐŸÑ€Ð¾Ñ„Ñ–Ð»ÑŒ" BackgroundColor="Transparent" TextColor="White" HorizontalOptions="Start"/>
                <Button Text="Ð’Ð¸Ñ…Ñ–Ð´" BackgroundColor="Transparent" TextColor="#FF5252" HorizontalOptions="Start" Clicked="OnExitClicked"/>
            </VerticalStackLayout>
