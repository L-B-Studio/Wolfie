<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Wolfie.Popups.ChangedPasswordPopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Border
        Padding="30"
        BackgroundColor="White"
        WidthRequest="{OnPlatform Android=300, iOS=300, WinUI=500, MacCatalyst=500}"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Center">
                    <Image Source="logo.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Wolfie" FontSize="24" FontFamily="MetalMania" TextColor="Black" VerticalOptions="Center" Margin="10,0,0,0"/>
                </StackLayout>
            </Grid>

            <Label Text="Change your password" FontFamily="MetalMania" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>


            <Label Text="Password Changes"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Entry x:Name="NewPasswordEntry"
                   Placeholder="Create new password"
                   TextColor="Black"
                   IsPassword="True"
                   FontSize="16"
                   HeightRequest="50"
                   WidthRequest="{OnPlatform Android=200, iOS=200, WinUI=400, MacCatalyst=400}"/>

            <Entry x:Name="RepeatPasswordEntry"
                   Placeholder="Repeat new password"
                   TextColor="Black"
                   IsPassword="True"
                   FontSize="16"
                   HeightRequest="50"
                   WidthRequest="{OnPlatform Android=200, iOS=200, WinUI=400, MacCatalyst=400}"/>

            <Button Text="Submit"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    WidthRequest="{OnPlatform Android=200, iOS=200, WinUI=400, MacCatalyst=400}"
                    CornerRadius="12"
                    Clicked="OnConfirmClicked"/>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
