<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Wolfie.Popups.EmailCodeVerifPopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Border
        WidthRequest="960"
        HeightRequest="520"
        Padding="15"
        BackgroundColor="White"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <!-- Верхняя панель с логотипом -->
            <Grid Padding="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="logo.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Wolfie" FontSize="24" FontFamily="MetalMania" TextColor="Black" VerticalOptions="Center" Margin="10,0,0,0"/>
                </StackLayout>
            </Grid>

            <Label Text="Verify your email" FontFamily="MetalMania" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>

            <!-- Поле ввода кода и кнопка -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Entry x:Name="CodeEntry"
                       Placeholder="XXX-XXX-XXX"
                       HorizontalTextAlignment="Center"
                       PlaceholderColor="Gray"
                       BackgroundColor="#F5F5F5"
                       TextColor="Black"
                       HeightRequest="48"
                       WidthRequest="200"/>

                <Button Text="Verify"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="48"
                        WidthRequest="150"
                        Clicked="VerifButtonClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
