<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Wolfie.Popups.ForgotPassPopup">

    <Border
        WidthRequest="500"
        HeightRequest="330"
        Padding="15"
        BackgroundColor="White"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <!-- Заголовок -->
            <Grid ColumnSpacing="10" HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Wolfie" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="Black"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalOptions="Center"/>
            </Grid>

            <Label Text="Восстановление аккаунта" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>

            <Label Text="Почта:" FontAttributes="Bold" FontSize="16" HorizontalOptions="Start" TextColor="Black" Margin="0,0,0,0"/>

            <!-- Поле ввода и кнопка -->
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                <Entry x:Name="EmailEntry"
                       Placeholder="example@gmail.com"
                       Keyboard="Email"
                       PlaceholderColor="Gray"
                       BackgroundColor="#F5F5F5"
                       TextColor="Black"
                       HeightRequest="48"
                       WidthRequest="400"/>

                <Button Text="Отправить код"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="48"
                        WidthRequest="400"
                        Clicked="SendCodeButtonClicked"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
